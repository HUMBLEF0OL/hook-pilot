#!/bin/sh

echo -e "\033[1müßπ Running Linter...\033[0m"

# Check if lint command exists in package.json
if ! grep -q '"lint"' package.json; then
  echo -e "\033[33m‚ö†Ô∏è  Lint command not found! Adding a default lint command to package.json...\033[0m"

  # Add the lint command to package.json using Node.js
  node -e "
  const fs = require('fs');
  const packageJson = JSON.parse(fs.readFileSync('package.json', 'utf8'));

  if (!packageJson.scripts) {
    packageJson.scripts = {};
  }

  // Add default lint command
  packageJson.scripts.lint = 'echo \"Please install linting tools like ESLint, JSHint, etc.\" && exit 1';

  // Save changes to package.json
  fs.writeFileSync('package.json', JSON.stringify(packageJson, null, 2));
  console.log('‚úÖ Lint command added to package.json.');
  "
  exit 1
fi

# Run linting command (adjust for your project)
npm run lint
if [ $? -ne 0 ]; then
  echo -e "\033[1;31m‚ùå  Linting failed. Please fix errors before committing.\033[0m"
  exit 1
fi

echo -e "\033[1;32m‚úÖ Linting passed.\033[0m"
