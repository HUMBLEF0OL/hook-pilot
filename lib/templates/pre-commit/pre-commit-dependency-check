#!/bin/sh

echo -e "\033[1mğŸ“¦ Checking Outdated Dependencies...\033[0m"

# Check for outdated dependencies
outdated=$(npm outdated --json)

if [ "$outdated" != "{}" ] && [ -n "$outdated" ]; then
  echo -e "\033[1;33mâš ï¸  Outdated dependencies detected:\033[0m"
  
  # Use Node.js to format and display JSON
  node -e "
  const outdated = $outdated;
  console.log(JSON.stringify(outdated, null, 2));
  "

  echo -e "\033[1;33mâš ï¸ Run 'npm update' to update outdated dependencies.\033[0m"
else
  echo -e "\033[1;32mâœ… All dependencies are up-to-date.\033[0m"
fi
