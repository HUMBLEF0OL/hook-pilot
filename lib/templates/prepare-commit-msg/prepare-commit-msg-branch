#!/bin/sh

echo -e "\033[1;33mðŸŒ¿ Adding Branch Info to Commit Message...\033[0m"
branch_name=$(git rev-parse --abbrev-ref HEAD)

if [ -z "$branch_name" ]; then
  echo -e "\033[1;31mâŒ Unable to determine the branch name. Ensure you're in a Git repository.\033[0m"
  exit 1
fi

echo -e "[${branch_name}] $(cat "$1")" > "$1"
echo -e "\033[1;32mâœ… Branch info added to commit message.\033[0m"
