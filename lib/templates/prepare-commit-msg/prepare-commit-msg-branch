#!/bin/sh

echo "ðŸŒ¿ Adding Branch Info to Commit Message..."

# Get the current git branch
branch_name=$(git rev-parse --abbrev-ref HEAD)

if [ -z "$branch_name" ]; then
  echo "âŒ Unable to determine the branch name. Ensure you're in a Git repository."
  exit 1
fi

# Append branch name to commit message
echo "[${branch_name}] $(cat "$1")" > "$1"

echo "âœ… Branch info added to commit message."
