#!/bin/sh
# will be applicable when adding commit using `git commit`
echo -e "\033[33mðŸ”– Adding Version Info to Commit Message...\033[0m"
# Check if package.json exists
if [ ! -f "package.json" ]; then
  echo -e "\033[31;1mâŒ package.json not found! Ensure your project has a package.json.\033[0m"
  exit 1
fi

version=$(grep -o '"version": *"[^"]*"' package.json | sed -E 's/.*: *"([^"]*)"/\1/')

# Validate if version was extracted
if [ -z "$version" ]; then
  echo -e "\033[31;1mâŒ Unable to extract version from package.json.\033[0m"
  exit 1
fi

# Append version info to commit message
echo "Version: $version - $(cat "$1")" > "$1"

echo -e "\033[32;1mâœ… Version info added to commit message.\033[0m"
