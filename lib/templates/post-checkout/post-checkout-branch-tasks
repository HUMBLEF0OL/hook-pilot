#!/bin/sh

echo "ğŸš€ Running Branch-Specific Tasks..."

# Get the current branch name
branch_name=$(git rev-parse --abbrev-ref HEAD)

# Define tasks per branch (you can add more tasks as necessary)
case "$branch_name" in
  "feature-branch")
    echo "ğŸ”§ Running feature branch tasks..."
    npm install
    npm run build
    ;;
  "hotfix-branch")
    echo "ğŸ”§ Running hotfix branch tasks..."
    npm install
    npm test
    ;;
  *)
    echo "âš ï¸ No specific tasks defined for branch: $branch_name"
    ;;
esac

echo "âœ… Branch-specific tasks completed."
