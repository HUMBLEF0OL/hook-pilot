#!/bin/sh

echo -e "\033[1;37müìè Checking Commit Message Length...\033[0m"

max_length=$(get_hook_config "commit-msg" "max_length" "72")
max_length=$((max_length))

commit_msg=$(cat "$1")
if [ ${#commit_msg} -gt "$max_length" ]; then
    echo -e "\033[1;31m‚ùå Commit message exceeds the maximum length of $max_length characters.\033[0m"
    echo -e "\033[1;33mPlease shorten your commit message.\033[0m"
    echo -e "\033[1;37mCurrent length: ${#commit_msg} characters\033[0m"
    exit 1
fi

echo -e "\033[1;32m‚úÖ Commit message is within the allowed length.\033[0m"
