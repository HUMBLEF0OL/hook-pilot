#!/bin/sh

echo "ğŸ” Checking for Protected Branches..."

# List of protected branches (modify as per your requirements)
protected_branches=("main" "master" "production")

# Check if the branch being pushed is protected
current_branch=$(git rev-parse --abbrev-ref HEAD)

if [[ " ${protected_branches[@]} " =~ " ${current_branch} " ]]; then
  echo "âŒ Pushing to protected branch '$current_branch' is not allowed. Please push to a non-protected branch."
  exit 1
fi

echo "âœ… Branch '$current_branch' is not protected. Push allowed."
